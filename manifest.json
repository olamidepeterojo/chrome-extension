{
    "manifest_version": 3,
    "name": "My Chrome Extension",
    "version": "1.0",
    "description": "A powerful extension leveraging Chromeâ€™s built-in AI APIs.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": "icons/icon48.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "webRequest"
    ],
    "host_permissions": [
    "https://language.googleapis.com/*",
    "https://api.openai.com/*"
    ],

    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}
